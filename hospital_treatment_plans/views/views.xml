    <record model="ir.ui.view" id="hospital_treatment_plans.list">
      <field name="name">treatment plans </field>
      <field name="model">hospital.treatment.plan</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
